package lambdas;

import java.util.function.Function;
import java.util.function.UnaryOperator;

public class Desafio {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Produto prod = new Produto("Ipad", 2500.00, 0.15);
		
		Function<Produto , Double> valorDesconto = preco  -> 
		prod.preco * (1 - prod.desconto);
		UnaryOperator<Double> imposto = valor -> valor >= 2500 ? valor * (1 - 0.085) : valor;
		System.out.println(valorDesconto.andThen(imposto).apply(prod));
		
			
		}

}
